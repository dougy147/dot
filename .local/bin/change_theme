#!/bin/sh

# Switch theme dark <-> light (ugly but working script)

themefile="$HOME/.local/bin/theme.txt"

[ ! -f $themefile ] && echo "dark" > "$themefile"

if [[ $(echo $(cat $themefile)) == "dark" ]]; then
	cd $HOME/.local/src/dwm
	sudo make clean install
	cd -
	cd $HOME/.local/src/st
	sudo make clean install
	cd -
	cd $HOME/.local/src/dmenu
	sudo make clean install
	cd -
	kill -HUP "$(pgrep -u "$USER" "\bdwm$")"
	echo "light" > "$themefile"

	# DUNST NOTIFICATION TO LIGHT
	kill $(pidof dunst)

	echo "[global]
    	monitor = 0
    	follow = keyboard
    	width = 270
    	height = 350
    	offset = 0x19
    	padding = 2
    	horizontal_padding = 1
    	transparency = 15
    	font = Monospace 12
    	format = \"<b>%s</b>\\n%b\"

	[urgency_low]
    	background = \"#ffffff\"
    	foreground = \"#000000\"
    	timeout = 3

	[urgency_normal]
    	background = \"#ffffff\"
    	foreground = \"#000000\"
    	timeout = 5

	[urgency_critical]
    	background = \"#1cc24d\"
    	foreground = \"#ebdbb2\"
    	frame_color = \"#fabd2f\"
    	timeout = 10" > "$HOME/.config/dunst/dunstrc"

	setsid -f dunst

	[ -f "$HOME/.local/share/white.jpg" ] && setbg "$HOME/docs/images/wallpapers/white_wood.jpg"
else
	cd $HOME/.local/src/dwm-dark
	sudo make clean install
	cd -
	cd $HOME/.local/src/st-dark
	sudo make clean install
	cd -
	cd $HOME/.local/src/dmenu-dark
	sudo make clean install
	cd -
	kill -HUP "$(pgrep -u "$USER" "\bdwm$")"
	echo "dark" > "$themefile"

	# DUNST NOTIFICATION TO LIGHT
	kill $(pidof dunst)

	echo "[global]
    	monitor = 0
    	follow = keyboard
    	width = 270
    	height = 350
    	offset = 0x19
    	padding = 2
    	horizontal_padding = 1
    	transparency = 15
    	font = Monospace 12
    	format = \"<b>%s</b>\\n%b\"

	[urgency_low]
    	background = \"#282828\"
    	foreground = \"#ffffff\"
    	timeout = 3

	[urgency_normal]
    	background = \"#282828\"
    	foreground = \"#ffffff\"
    	timeout = 5

	[urgency_critical]
    	background = \"#1cc24d\"
    	foreground = \"#ebdbb2\"
    	frame_color = \"#fabd2f\"
    	timeout = 10" > "$HOME/.config/dunst/dunstrc"

	setsid -f dunst

	[ -f "$HOME/.local/share/dark.jpeg" ] && setbg "$HOME/.local/share/dark.jpeg"
fi
